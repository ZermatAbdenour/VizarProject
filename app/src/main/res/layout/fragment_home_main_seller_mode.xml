<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeMainSellerMode">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        >    <!-- things to scroll -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Dashbord"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginBottom="20dp"
            />


        <androidx.cardview.widget.CardView
            android:id="@+id/AddNewProduct"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="25dp"

            android:clickable="true"
            >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add new product"
                    android:textStyle="bold"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="17sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Publish your new product through our marketplace"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="46dp"
                    android:lines="2"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/sellerhomeimage1"
                android:foreground="@drawable/sellerhomeimageforground"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/DeleteProduct"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="25dp"

            android:clickable="true"
            >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete product"
                    android:textStyle="bold"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="17sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete existing product from the marketplace"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="46dp"
                    android:lines="2"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/sellerhomeimage2"
                android:foreground="@drawable/sellerhomeimageforground"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:id="@+id/ViewWarehouse"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:layout_marginTop="10dp"

            app:cardCornerRadius="8dp"
            app:cardElevation="25dp"

            android:clickable="true"
            >
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View warehouse"
                    android:textStyle="bold"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="18dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="17sp"
                    />
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Take a look at your published products"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="46dp"
                    android:lines="2"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>


            <ImageView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:src="@drawable/sellerhomeimage3"
                android:foreground="@drawable/sellerhomeimageforground"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>





</FrameLayout>